datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

//////////////////////////////////////////////////////////////
// Enums
//////////////////////////////////////////////////////////////

enum Emotion {
  NEUTRAL
  HAPPY
  SAD
  ANGRY
  STRESSED
}

enum MessageRole {
  USER
  BOT
}

enum AlertSeverity {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

//////////////////////////////////////////////////////////////
// User (Mapped from Clerk)
//////////////////////////////////////////////////////////////

model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  clerkId  String  @unique
  email    String  @unique
  name     String?
  imageUrl String?

  apiKeyHash     String? @unique
  emotionKeyHash String? @unique // <-- unique already creates an index

  data     DataPoint[]
  sessions ChatSession[]
  alerts   EmergencyAlert[]
  settings UserSettings?
}

//////////////////////////////////////////////////////////////
// Time-Series Data
//////////////////////////////////////////////////////////////

model DataPoint {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])

  timestamp     DateTime @default(now())
  heartRate     Int?
  spO2          Float?
  emotion       Emotion?
  confidence    Float? // emotion confidence
  source        String? // e.g., "iot", "camera" or "merged"
  deviceId      String? // device identifier
  correlationId String? // optional to pair modal readings across devices (UUID)
  merged        Boolean  @default(true) // true for canonical merged record

  @@index([userId, timestamp])
}

//////////////////////////////////////////////////////////////
// Chat System
//////////////////////////////////////////////////////////////

model ChatSession {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime      @default(now())
  messages  ChatMessage[]
}

model ChatMessage {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  sessionId String      @db.ObjectId
  session   ChatSession @relation(fields: [sessionId], references: [id])

  role      MessageRole
  content   String
  createdAt DateTime    @default(now())
}

//////////////////////////////////////////////////////////////
// Alerts
//////////////////////////////////////////////////////////////

model EmergencyAlert {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime      @default(now())
  severity  AlertSeverity
  message   String
}

//////////////////////////////////////////////////////////////
// Helpline Directory (simple)
//////////////////////////////////////////////////////////////

model HelplineResource {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  phone String?
  url   String?
}

model RawReading {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  userId        String   @db.ObjectId
  timestamp     DateTime @default(now())
  payload       Json
  source        String
  deviceId      String?
  correlationId String?
  processed     Boolean  @default(false)
  createdAt     DateTime @default(now())

  @@index([userId, createdAt])
}

//////////////////////////////////////////////////////////////
// User Settings (simple 1:1)
//////////////////////////////////////////////////////////////

model UserSettings {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @unique @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])

  notificationsEnabled Boolean @default(true)
}
